<% content_for :title do %>
  <%= post['title'] %>
<% end %>

<article class="post">
  <header class="header">
    <h3 class="bold"><%= post['title'] %></h3>
    <hr>
    <p class="italic"><%= Time.parse(post['date']).strftime('%d/%m/%Y') %></p>      
  </header>
  <main>
    <%= post['content'] %>
  </main>
</article>
